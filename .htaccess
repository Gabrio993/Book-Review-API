<IfModule mod_rewrite.c>
	RewriteEngine On

	RewriteCond %{REQUEST_URI} ^/book-review-api/$ [NC]
	RewriteRule ^$ app/views/vista.php [L]

	# RewriteCond %{REQUEST_URI} ^/book-review-api/?$ [NC] 
	# RewriteRule ^$ public/index.php [L]

	RewriteCond %{REQUEST_FILENAME} !-d
